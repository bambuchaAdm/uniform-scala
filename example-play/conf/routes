# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page

GET         /                                       controllers.SimplifiedBeardController.beardAction(id = "")
GET         /:id                                    controllers.SimplifiedBeardController.beardAction(id: String)
POST        /                                       controllers.SimplifiedBeardController.beardAction(id = "")
POST        /:id                                    controllers.SimplifiedBeardController.beardAction(id: String)


# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.versioned(path="/public/assets", file: Asset)
